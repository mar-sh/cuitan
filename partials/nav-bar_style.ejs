.nav ul{
  list-style-type: none;
  text-align: right;
  margin: 0;
  padding-right: 30px;
  background-color: rgba(172, 172, 172, 0.1);
}
.nav li {
  display: inline-block;
  padding: 16px;
  font-size: 24px;
}
.nav li a {
  text-align: center;
  color: rgba(94, 146, 214, 1);
  text-decoration: none;  
}
.nav li a:hover {
  text-decoration: underline;
  font-weight: bold;
  cursor: pointer;
}