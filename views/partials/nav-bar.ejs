<%let nav1 = 'Sign Up'%>
<%let nav2 = 'Sign In'%>
<%let nav1Url = '/register'%>
<%let nav2Url = '/login'%>
<%let nav3Url = '/'%>

<%if (locals.username) {%>
  <%nav1 = 'Profile'%>
  <%nav2 = 'Sign Out'%>
  <%nav1Url = `/profiles/${username}`%>
  <%nav2Url = '/signout'%>
  <%nav3Url = '/home'%>
<%}%>
<nav class="navbar navbar-expand-lg navbar-light bg-primary">
  <a class="navbar-brand" href="<%=nav3Url%>">Cuit</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
      <% if(locals.username) { %>
        <form method="POST" action="/home/search" class="form-inline my-2 my-lg-0" style="margin-left: 30px;">
          <input class="form-control mr-sm-2" type="text" name="username" placeholder="Search">
          <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Search</button>
        </form>
      <% } %>
    <ul class="nav navbar-nav ml-auto" >
      <li class="nav-item">
        <a class="nav-link" href="<%=nav1Url%>"><%=nav1%></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%=nav2Url%>"><%=nav2%></a>
      </li>
    </ul>

 
  </div>
</nav>