<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('./partials/_headDefault.ejs');%>
    <title>CUITAN - Register</title>
  </head>
  <body>
    <%-include('./partials/nav-bar.ejs');%>

    <form method="POST" action="/profiles/<%=username%>/updates" style="width: 50%; margin: 10px auto; ">
      <div class="form-group">
        <label for="first_name">First Name:</label>
        <input type="text" name="first_name" value="<%=user.first_name%>" class="form-control"  placeholder="first name" required>
      </div>
      <div class="form-group">
        <label for="last_name">Last Name:</label>
        <input type="text" name="last_name" value="<%=user.last_name%>" class="form-control"  placeholder="last name" required>
      </div>
      <div class="form-group">
        <label for="username">Username:</label>
        <input type="text" name="username" value="<%=user.username%>"class="form-control"  placeholder="username" required>
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" name="password" value="<%=user.password%>" class="form-control"  placeholder="password" required>
      </div>
      <div class="form-group">
        <label for="Bio">Tell Others About Yourself:</label>
        <textarea maxlength="255" name="bio" cols="80px", rows="8px" class="form-control" style="resize: none"><%=user.bio%></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Update Me!</button>
    </form>

<%- include('./partials/_footer.ejs') %>